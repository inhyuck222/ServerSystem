import java.awt.BorderLayout;
import java.awt.Container;
import java.awt.FlowLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.OutputStreamWriter;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.HashMap;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JScrollPane;
import javax.swing.JTextArea;
import javax.swing.JTextField;

import DicServerFrame.ServerThread;

public class ServerFrame extends JFrame{
	JTextField msgField = new JTextField(10);
	JButton sendBtn = new JButton("검색");
	JTextArea statusArea = new JTextArea(7, 40);
	
	public ServerFrame(){
		super("server");
		setSize(600,300);
		Container c = getContentPane();
		c.setLayout(new BorderLayout());
		c.setLayout(new FlowLayout());
		
		c.add(new JScrollPane(statusArea), BorderLayout.CENTER);
		c.add(sendBtn, BorderLayout.SOUTH);
		c.add(msgField, BorderLayout.NORTH);
		statusArea.setEditable(false);
		
		setVisible(true);
		
		sendBtn.addActionListener(new ActionListener() {

			@Override
			public void actionPerformed(ActionEvent e) {
				
			}
		});
		startService();
	}
	
	private void startService(){
		new ServerThread().start();
	}
	
	class ServiceThread extends Thread {
		Socket socket;

		public ServiceThread(Socket socket) {
			this.socket = socket;
		}

		public void run() {
			try {
				BufferedWriter out = new BufferedWriter(new OutputStreamWriter(socket.getOutputStream()));

				while (true) {
					String msg = msgField.getText();
					out.write(msg+"\n");
					out.flush();
				}
				
			} catch (IOException e) {
				System.out.println("클라이언트 종료");
				e.printStackTrace();
			}
		}
	}
	
	class ServerThread extends Thread {

		public void run() {
			ServerSocket listner = null;
			Socket socket = null;
			try {
				listner = new ServerSocket(9998);
			} catch (IOException e) {
				e.printStackTrace();
			}

			while (true) {
				try {
					socket = listner.accept();
					statusArea.append("클라이언트 접속\n");
					new ServiceThread(socket).start();
				} catch (IOException e) {
					e.printStackTrace();
				}
			}
		}
	}
	
	public static void main(String[] args){
		new ServerFrame();
	}

}
