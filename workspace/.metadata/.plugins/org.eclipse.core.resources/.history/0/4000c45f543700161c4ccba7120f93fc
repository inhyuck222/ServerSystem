import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class GameFrame extends JFrame{
	
	GameFrame(){
		setTitle("moster");
		setSize(500, 500);
		setContentPane(new GamePanel());
		setVisible(true);
	}
	
	class GamePanel extends JPanel{
		JLabel avata = new JLabel("@");
		Monster monster = new Monster("M", avata);
		GamePanel(){
			setLayout(null);
			avata.setSize(20,20);
			avata.setLocation(10, 10);
			add(avata);
			
			monster.setSize(20,20);
			monster.setLocation(400,400);
			add(monster);
			
			monster.run();
		}
	}
	
	class Monster extends JLabel implements Runnable{
		JLabel avata;
		Monster(String text, JLabel avata){
			super(text);
			this.avata = avata;
		}

		@Override
		public void run() {
			while(true){
				try {
					Thread.sleep(400);
				} catch (InterruptedException e) {
					return;
				}
				
				int destX = avata.getX();
				int destY = avata.getY();
				int myX = this.getX();
				int myY = this.getY();
				
				if(myX > destX)myX -= 10;
				else myX += 10;
				if(myY > destY)myY -= 10;
				else myY += 10;
				
				this.setLocation(myX, myY);
			}
		}
		
	}
	
	public static void main(String[] args){
		new GameFrame();
	}

}
